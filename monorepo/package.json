{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:app": "turbo run dev:app --concurrency=15",
    "dev:packages": "turbo run dev --concurrency=15",
    "start:app": "turbo run start --filter=example-app",
    "build:packages": "turbo run build --filter=@pangolindex/*"
  },
  "devDependencies": {
    "@pangolindex/sdk": "5.3.4",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "prettier": "^2.5.1",
    "turbo": "latest",
    "tsc-alias": "1.8.7"
  },
  "peerDependencies": {
    "@pangolindex/sdk": ">=2.0.1"
  }
}
